{
  "name": "deckgl-treemap-demo",
  "version": "1.0.0",
  "description": "High-performance hierarchical treemap visualization using Deck.gl with 15,000+ nodes",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "check": "pnpm type-check && pnpm lint && pnpm format:check",
    "lint": "pnpm eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "keywords": [
    "deck.gl",
    "treemap",
    "visualization",
    "hierarchical",
    "performance",
    "typescript",
    "webgl",
    "vite"
  ],
  "author": "Xevion",
  "license": "GNU GPLv3",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/seedrandom": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^5.0.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^15.2.0",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "@deck.gl/core": "^9.0.33",
    "@deck.gl/layers": "^9.0.33",
    "@deck.gl/react": "^9.0.33",
    "@luma.gl/core": "^9.0.0",
    "@mantine/core": "^8.2.5",
    "@mantine/hooks": "^8.2.5",
    "pnpm": "^9.12.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "seedrandom": "^3.0.5"
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "pnpm@9.12.1",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,html,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
